<Window x:Class="UD2_1_Bouzas_Prado_Bran.windows.PiedraPapelTijera" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Piedra, Papel o Tijeras" Height="400" Width="500" WindowStartupLocation="CenterScreen" Background="#F0F0F0" ResizeMode="NoResize">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Piedra, Papel o Tijeras" FontSize="26" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,20"/>

        <TextBlock x:Name="lblResultado" Text="Esperando predicción..." FontSize="20" FontWeight="Bold" Foreground="#0055aa" HorizontalAlignment="Center" Grid.Row="1" Margin="0,0,0,15"/>

        <TextBlock x:Name="lblJugadaMaquina" Text="---" FontSize="18" FontWeight="Bold" Foreground="#444" HorizontalAlignment="Center" Grid.Row="2" Margin="0,0,0,10"/>

        <TextBlock x:Name="lblResultadoFinal" Text="---" FontSize="20" FontWeight="Bold" Foreground="DarkGreen" HorizontalAlignment="Center" Grid.Row="3" Margin="0,0,0,15"/>

        <Grid Grid.Row="4" HorizontalAlignment="Center" Margin="0,20,0,0" Width="400" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnJugar" Content="Jugar" Grid.Column="0" Width="100" Click="BtnJugar_Click" IsEnabled="False"/>
            <Button Content="Reiniciar" Grid.Column="2" Width="100" Click="BtnReiniciar_Click"/>
            <Button Content="Cerrar" Grid.Column="4" Width="100" Click="BtnCerrar_Click"/>
        </Grid>
    </Grid>
</Window>