<Window x:Class="UD2_1_Bouzas_Prado_Bran.windows.NavegadorGestos" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" Title="Navegador por Gestos" Height="800" Width="1200" WindowStartupLocation="CenterScreen" Background="#F4F4F4" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#E0E0E0" CornerRadius="5" Padding="8" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BtnAtras" Content="&lt;" Width="40" Height="35" Margin="5" Click="BtnAtras_Click" FontSize="20" FontWeight="Bold"/>

                <Button x:Name="BtnAdelante" Content="&gt;" Width="40" Height="35" Margin="5" Grid.Column="1" Click="BtnAdelante_Click" FontSize="20" FontWeight="Bold"/>

                <Button x:Name="BtnRecargar" Content="⟳" Width="40" Height="35" Margin="5" Grid.Column="2" Click="BtnRecargar_Click" FontSize="20" FontWeight="Bold"/>

                <TextBox x:Name="TxtBusqueda" Grid.Column="4" Height="35" FontSize="14" VerticalContentAlignment="Center" Margin="5" TextChanged="TxtBusqueda_TextChanged"/>

                <Button x:Name="BtnBuscar" Grid.Column="5" Content="🔍" Width="40" Height="35" Margin="5" Click="BtnBuscar_Click" FontSize="20"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" BorderBrush="#999" BorderThickness="1" CornerRadius="5">
            <wv2:WebView2 x:Name="webView" />
        </Border>

        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Control por gestos y voz activo" Foreground="#007ACC" FontWeight="Bold" VerticalAlignment="Center" Margin="5"/>

            <Button Grid.Column="2" x:Name="BtnVolver" Content="Volver al menú principal" Width="200" Height="35" Margin="5" Click="BtnVolver_Click"/>
        </Grid>
    </Grid>
</Window>