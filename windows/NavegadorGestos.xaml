<Window x:Class="UD2_1_Bouzas_Prado_Bran.windows.NavegadorGestos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Navegador Gestos" Height="800" Width="1200" WindowStartupLocation="CenterScreen" Background="#F4F4F4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#E0E0E0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BtnAtras" Grid.Column="0" Content="◀" Click="BtnAtras_Click" Width="40" Height="40" Margin="10"/>
            <Button x:Name="BtnAdelante" Grid.Column="1" Content="▶" Click="BtnAdelante_Click" Width="40" Height="40" Margin="5,10"/>
            <Button x:Name="BtnRecargar" Grid.Column="2" Content="↻" Click="BtnRecargar_Click" Width="40" Height="40" Margin="5,10"/>
            <Border Grid.Column="3" Margin="10" VerticalAlignment="Center" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="6" Background="White">
                <TextBox x:Name="TxtBusqueda" BorderThickness="0" Padding="8,4" FontSize="14" VerticalContentAlignment="Center"/>
            </Border>
            <Button x:Name="BtnBuscar" Grid.Column="4" Content="🔍" Click="BtnBuscar_Click" Width="40" Height="40" Margin="5,10"/>
            <Button x:Name="BtnVolver" Grid.Column="5" Content="Menú" Click="BtnVolver_Click" Height="40" Margin="10" Padding="10,0"/>
        </Grid>
        <Grid Grid.Row="1">
            <wv2:WebView2 x:Name="webPrincipal"/>
            
            <wv2:WebView2 x:Name="webCamOverlay" Width="500" Height="300" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" IsHitTestVisible="False" DefaultBackgroundColor="Transparent"/>
        </Grid>
    </Grid>
</Window>